@model Invoice

@{
    ViewData["Title"] = "Create";
}

<div class="form-container">
    <h2>Crear Factura</h2>
    <form asp-action="Create">
        <div class="form-group">
            <label asp-for="CustomersId">Cliente</label>
            <select asp-for="CustomersId" class="form-control" asp-items="new SelectList(ViewBag.Customers, nameof(Customers.Id), nameof(Customers.CustName))">
                <option value="">Seleccione un cliente...</option>
            </select>
            <span asp-validation-for="CustomersId" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label>Detalles de la Factura</label>
            <div class="form-group">
                <label asp-for="TotalItbis" class="control-label"></label>
                <input asp-for="TotalItbis" class="form-control" />
                <span asp-validation-for="TotalItbis" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group">
            <label asp-for="SubTotal" class="control-label"></label>
            <input asp-for="SubTotal" class="form-control" />
            <span asp-validation-for="SubTotal" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="Total" class="control-label"></label>
            <input asp-for="Total" class="form-control" />
            <span asp-validation-for="Total" class="text-danger"></span>
        </div>
      
        <div class="form-group">
            <label class="control-label">Cantidad</label>
            <input name="cantidad" class="form-control" />
        </div>
        <div class="form-group">
            <label class="control-label">Precio</label>
            <input name="precio" class="form-control" />
        </div>

        <div class="form-group">
            <button type="submit" class="btn btn-primary">Crear</button>
            <a asp-action="Index" class="btn btn-secondary">Volver</a>
        </div>

    </form>
</div>